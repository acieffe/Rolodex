@{
    ViewData["Title"] = "Coder Foundry Bootcamp Project";
}

    <!-- ====== Maiu Section ====== -->
    <main class="flex-shrink-0 d-flex pb-5">
        <div class="container col-xxl-8 px-4 py-5 bg-black-8 text-light">
            <div class="row g-5 py-5 row-cols-1 row-cols-lg-2 h-100">
                <div class="col order-last order-lg-first">
                    <h1 class="display-5 fw-bold lh-1 mb-3">Rolodex: A Coding Bootcamp Project</h1>
                    <h4 class="lead">This is a full crud program allowing the user to enter contact information and store it in a database. It also allows the user to edit or update the contact and delete it. Images are also stored.</h4>
                    <ul class="fa-ul pt-2 checklist">
                        <li><span class="fa-li"><i class="fas fa-check-square"></i></span>CSS and Bootstrap Layout</li>
                        <li><span class="fa-li"><i class="fas fa-check-square"></i></span>C# Model View Controler (MVC) Design</li>
                        <li><span class="fa-li"><i class="fas fa-check-square"></i></span>Postgres Database Storage</li>
                        <li><span class="fa-li"><i class="fas fa-check-square"></i></span>Heroku Deployemt</li>
                        <li><span class="fa-li"><i class="fas fa-check-square"></i></span>Full CRUD Application</li>
                    </ul>
                    <div>
                        <a type="button"  asp-area="" asp-controller="Contacts" asp-action="Index" class="btn btn-outline-warning bt-lg px-4 me-md-2">Try it out</a>
                    </div>
                    <h5 class="fw-bold mt-3 mb-5">
                        <div class="d-flex pb-3">
                            <div class="row text-gold">
                                <div class="col"><i class="fab fa-html5 fa-2x"></i></div>
                                <div class="col"><i class="fab fa-css3-alt fa-2x"></i></div>
                                <div class="col"><i class="fab fa-bootstrap fa-2x"></i></div>
                                <div class="col">
                                    <div class="d-flex">
                                        <i class="fa-solid fa-c fa-2x"></i><i class="fa-solid fa-hashtag fa-2x"></i>
                                     </div>
                                </div>
                            </div>
                        </div>
                    </h5>
                </div>
                <div class="col">
                    <img src="~/img/rolodex.png" class="img-fluid center-block d-block mx-auto" alt="Rolodex Logo" width="700" height="500">
                </div>
            </div>
        </div>
    </main>
