                    <input asp-for="ImageType" class="form-control" />
                    <span asp-validation-for="ImageType" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-2 d-flex justify-content-end ">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="pt-4 pb-5 mb-5 text-center">
    <a class="btn btn-outline-warning" asp-action="Index">Back to List</a>
</div>
<h1 class="m-5">&nbsp;</h1>


